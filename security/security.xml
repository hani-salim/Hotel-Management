<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hotel_category" model="ir.module.category">
            <field name="name">Hotel</field>
        </record>

        <!-- تعريف المجموعات -->
        <record id="group_hotel_manager" model="res.groups">
            <field name="name">Hotel Manager</field>
            <field name="category_id" ref="hotel.hotel_category"/>
        </record>

        <record id="group_hotel_reception" model="res.groups">
            <field name="name">Reception</field>
            <field name="category_id" ref="hotel.hotel_category"/>
        </record>

        <!-- قواعد الوصول -->
        <record id="hotel_guest_access" model="ir.model.access">
            <field name="name">hotel.guest.access</field>
            <field name="model_id" ref="model_hotel_guest"/>
            <field name="group_id" ref="group_hotel_manager"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

        <record id="hotel_booking_access" model="ir.model.access">
            <field name="name">hotel.booking.access</field>
            <field name="model_id" ref="model_hotel_booking"/>
            <field name="group_id" ref="group_hotel_reception"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>
    </data>
</odoo>