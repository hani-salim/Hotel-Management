<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
      <record id="view_room_availability_wizard_form" model="ir.ui.view">
            <field name="name">hotel.room.availability.wizard.form</field>
            <field name="model">hotel.room.availability.wizard</field>
            <field name="arch" type="xml">
                <form string="Check Room Availability">
                    <sheet>
                        <group>
                            <field name="check_in"/>
                            <field name="check_out"/>
                        </group>
                        <footer>
                            <button name="action_check_availability" string="Check Availability" type="object"
                                    class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
</odoo>