<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_occupancy_wizard_form" model="ir.ui.view">
            <field name="name">hotel.occupancy.wizard.form</field>
            <field name="model">hotel.occupancy.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <footer>
                            <button name="action_generate_report" string="Generate Report" type="object"
                                    class="oe_highlight"/>
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

